<Window
	x:Class="GetnMethods.DownloadViewDialog"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Download"
	d:DesignHeight="250"
	d:DesignWidth="400"
	ExtendClientAreaToDecorationsHint="True"
	TransparencyLevelHint="AcrylicBlur"
	WindowStartupLocation="CenterOwner"
	mc:Ignorable="d">
	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
					BackgroundSource="Digger"
					MaterialOpacity="0.65"
					TintColor="Black"
					TintOpacity="1" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>

		<Panel Margin="40" />
		<DockPanel>
			<StackPanel Margin="10" DockPanel.Dock="Top">
				<TextBlock
					FontSize="20"
					FontWeight="Bold"
					Text="Download" />
				<TextBlock Text="Please wait while the file is being downloaded." />
			</StackPanel>
			<StackPanel Margin="10" DockPanel.Dock="Bottom">
				<ProgressBar Name="ProgressBar" IsIndeterminate="True" />
				<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
					<Button Name="CancelButton" Content="Cancel" />
				</StackPanel>
			</StackPanel>
		</DockPanel>
	</Panel>


</Window>
