<Window
	x:Class="GetnMethods.Views.MainWindow"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
	xmlns:local="using:GetnMethods"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="using:FluentAvalonia.UI.Controls"
	xmlns:views="clr-namespace:GetnMethods"
	xmlns:vm="using:GetnMethods.ViewModels"
	Title="GetnMethods"
	d:DesignHeight="550"
	d:DesignWidth="1000"
	x:DataType="vm:MainWindowViewModel"
	Background="Transparent"
	ExtendClientAreaToDecorationsHint="True"
	Icon="/Assets/report-repo.ico"
	TransparencyLevelHint="AcrylicBlur"
	mc:Ignorable="d">

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>


	<Panel Background="{DynamicResource ThemeContentBackgroundColor}">
		<Grid
		HorizontalAlignment="Stretch"
		VerticalAlignment="Stretch"
		RowDefinitions="Auto, *">
			<Grid
				Grid.Row="1"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				ColumnDefinitions="50, *"
				RowDefinitions="Auto, *, Auto">
				<views:MainMenuBarView Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" />
				<Grid
					Grid.Column="0"
					Grid.ColumnSpan="2"
					Grid.Row="1"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Background="{DynamicResource ThemeContentBackgroundColor}"
					ZIndex="1000">
					<dialogHost:DialogHost CloseOnClickAway="True" IsOpen="False">
						<views:MainView />
					</dialogHost:DialogHost>
				</Grid>
				<views:MainStatusBarView
					Grid.Column="0"
					Grid.ColumnSpan="2"
					Grid.Row="2"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					IsVisible="True" />
			</Grid>
		</Grid>
		
	</Panel>

</Window>
